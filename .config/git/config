[color]
    ui = auto
[core]
    autocrlf = input
    ; pager = less -F -X
    pager = delta --syntax-theme zenburn
    editor = nvim
[alias]
    type = cat-file -t
    dump = cat-file -p
    dsf = "!f() { [ \"$GIT_PREFIX\" != \"\"  ] && cd "$GIT_PREFIX"; git diff --color $@ | diff-so-fancy | less --tabs=4 -RFX;  }; f"
    hist = log --pretty=format:'%C(auto)%h %ad %s%d [%an]' --graph --date=short
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset %Cblue[%an]%Creset' --abbrev-commit --date=relative
[push]
    default = simple
[include]
    path = ~/.config/git/gitconfig.private
[pull]
    rebase = true
[init]
    defaultBranch = main
[interactive]
    diffFilter = delta --color-only
[delta]
    navigate = true  # use n and N to move between diff sections
    line-numbers = true
    side-by-side = true
[merge]
    conflictStyle = diff3
[diff]
    colorMoved = default
